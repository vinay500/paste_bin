generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id          String    @id
  content     String
  views_count Int       @default(0)
  max_views   Int?
  expires_at  DateTime?
  created_at  DateTime  @default(now())
}
